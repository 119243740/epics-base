include config.${T_A}.mk

MAKEOPT=${MFLAGS} -f Makefile.${BUILD_TYPE}

all: build

depends:
	@(for DIR in ${DIRS};					\
		do						\
			TMP=$$PWD; echo "${T_A}: --$$DIR"; 	\
			cd $$DIR; ${MAKE} ${MAKEOPT} $@; cd $$TMP;\
		done)

build_libs:
	@(for DIR in ${DIRS};					\
		do						\
			TMP=$$PWD; echo "${T_A}: --$$DIR"; 	\
			cd $$DIR; ${MAKE} ${MAKEOPT} $@; cd $$TMP;\
		done)

install_libs:
	@(for DIR in ${DIRS};					\
		do						\
			TMP=$$PWD; echo "${T_A}: --$$DIR"; 	\
			cd $$DIR; ${MAKE} ${MAKEOPT} $@; cd $$TMP;\
		done)

build:
	@(for DIR in ${DIRS};					\
		do						\
			TMP=$$PWD; echo "${T_A}: --$$DIR"; 	\
			cd $$DIR; ${MAKE} ${MAKEOPT} $@; cd $$TMP;\
		done)

install:
	@(for DIR in ${DIRS};					\
		do						\
			TMP=$$PWD; echo "${T_A}: --$$DIR"; 	\
			cd $$DIR; ${MAKE} ${MAKEOPT} $@; cd $$TMP;\
		done)

